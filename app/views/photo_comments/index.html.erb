<div class="page-header">
  <h1>
    Photo comments
    <a href="/photo_comments/new" class="btn btn-lg btn-success">New Photo comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @photo_comments.each do |photo_comment| %>
      <tr>
        <td>
          <a href="/photo_comments/<%= photo_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/photo_comments/<%= photo_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo_comment/<%= photo_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
